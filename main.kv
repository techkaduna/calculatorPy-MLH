<Quadratic>:
    name:'quadratic'
    Image:
        source:'light.jpg'
        allow_stretch:True
        keep_ratio:False     
    BoxLayout:
        orientation:'vertical'
        size_hint:1,1
        padding:'5dp'
        spacing:'15dp'
        BoxLayout:
            orientation:'vertical'
            spacing:'5dp'
            Label:   
                text: 'Equation form: Ax2+Bx+C = 0'
                font_size:'18dp'
                color:(232/255,129/255,255/255,.5)
            GridLayout:
                rows: 1
                spacing: '15dp'
                padding:'15dp'
                RoundedText:
                    id:a
                    multiline:False
                    size_hint:None,None
                    width: '60dp'
                    height: '60dp'
                    font_size: '40dp'
                RoundedText:
                    id:b
                    multiline:False
                    size_hint:None,None
                    width: '60dp'
                    height: '60dp'
                    font_size: '40dp'
                RoundedText:
                    id:c
                    multiline:False
                    size_hint:None,None
                    width: '60dp'
                    height: '60dp'
                    font_size: '40dp'
            BoxLayout:
                size_hint:1,.6
                spacing:'25dp'
                RoundedButton:
                    text: 'Submit'
                    size_hint:None,None
                    width:'100dp'
                    height:'50dp'
                    on_press:root.solve_eqn()
                RoundedButton:
                    text: 'Back'
                    size_hint:None,None
                    width:'100dp'
                    height:'50dp'
                    on_press: 
                        app.root.current = 'EquationWindow'
                        root.manager.transition.direction = 'right'
            RoundedLabel:
                id:quad_ans
                text:'Answer: '
                font_size: '16dp'
                #text_size: root.width, None
                #size: self.texture_size


<About>:
    name: 'About'
    Image:
        source: 'light.jpg'
        allow_stretch: True
        keep_ratio: False
    
    BoxLayout:
        size_hint: 1, .8
        orientation: 'vertical'
        ScrollableLabel:
            text:root.text
    BoxLayout:
        size_hint: 1, .1
        RoundedButton:
            text: 'Back'
            size_hint: None, None
            width: '85dp'
            height: '45dp'
            on_press: 
                app.root.current = 'SelectOperation'
        

<ScrollableLabel@ScrollView>:
    text: str('')
    RoundedLabel:
        text:root.text
        font_size: '12dp'
        text_size: self.width,None
        size_hint_y: None
        height: self.texture_size[1] 

<RoundedButton@Button>:
    background_color:(0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (232/255,129/255,255/255,.5)
        RoundedRectangle:
            size:self.size 
            pos: self.pos 
            radius: [8]

<RoundedText@TextInput>:
    background_color:(0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (232/255,129/255,255/255,.5)
        RoundedRectangle:
            size:self.size 
            pos: self.pos 
            radius: [8]
        
<RoundedLabel@Label>:
    background_color:(0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (232/255,129/255,255/255,.5)
        RoundedRectangle:
            size:self.size 
            pos: self.pos 
            radius: [10]
