#: kivy 1.0.9

WindowManager:
    SelectOperation:
    EquationWindows:
    SolveBy2:
    SolveBy3:
    Quadratic:
    About:


<SelectOperation>:
    name: 'SelectOperation'
    Image:
        source: 'light.jpg'
        allow_stretch:True
        keep_ratio:False
    BoxLayout:
        orientation: 'vertical'
        size_hint:1,.8
        spacing:'10dp'
        padding:'10dp'
        RoundedButton:
            text: 'Equations'
            size_hint: 1, None
            height: '50dp'
            on_press:
                app.root.current = 'EquationWindow'
                root.manager.transition.direction = 'left'
        Image:
            source: 'Logo.png'
            allow_stretch: False
            keep_ratio: False
        BoxLayout:
            size_hint:1,.5
            spacing:'5dp'
            RoundedButton:
                text:'About Us'
                size_hint: None, None
                height: '30dp' 
                on_press:
                    app.root.current = 'About'
                    root.manager.transition.direction = 'left'
            RoundedButton:  
                text:'FeedBack'
                size_hint: None, None
                height: '30dp' 


<EquationWindows>:
    name:  'EquationWindow'
    Image:
        source:'light.jpg'
        allow_stretch:True
        keep_ratio:False
    BoxLayout:
        size_hint:1,1
        spacing:'10dp'
        padding:'10dp'
        orientation: 'vertical'
        BoxLayout:
            spacing:'10dp'
            padding: '10dp'
            orientation: 'vertical'
            RoundedButton:
                text:'Quadratic'
                size_hint:1,None
                height:'45dp'
                on_press: 
                    app.root.current = 'quadratic'
                
            RoundedButton:
                text:'2 Unknowns'
                size_hint:1,None
                height:'45dp'
                on_press: app.root.current = 'solve_2'
            RoundedButton:
                text: '3 Unknowns'
                size_hint:1,None
                height:'45dp'
                on_press: app.root.current = 'solve_3'
            RoundedButton:
                text: 'Main Menu'
                size_hint:1,None
                height:'45dp'
                on_press: 
                    app.root.current = 'SelectOperation'
                    root.manager.transition.direction = 'right'
            Label:
                text:'(c)ElytesTech 2022'
                font_size:'10dp'
                color:(232/255,129/255,255/255,.5)

<SolveBy2>:
    name:'solve_2'
    Image:
        source:'light.jpg'
        allow_stretch:True
        keep_ratio:False
    BoxLayout: 
        orientation:'vertical'
        GridLayout:
            cols: 3
            spacing: '5dp'
            padding: '5dp'
            RoundedText:
                id: a
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedText:
                id: b
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedText:
                id: c
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedText:
                id: d
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedText:
                id: e
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedText:
                id: f
                size_hint:None,None
                width:'60dp'
                height:'60dp'
                multiline: False
                font_size:'40dp'
            RoundedButton:
                text: 'Submit'
                size_hint:None,None
                width:'80dp'
                height:'45dp'
                on_press:root.solve_eqn()
            RoundedButton:
                text: 'Back'
                size_hint:None,None
                width:'90dp'
                height:'45dp'
                on_press:app.root.current = 'EquationWindow'
        BoxLayout:
            orientation:'vertical'
            spacing:'5dp'
            padding:'5dp'
            Label:
                text:'Equation form: Ax+By=C'.upper()
                font_size:'14dp'
                color:(232/255,129/255,255/255,.5)
            RoundedLabel:
                id:ans_label
                text:'Answer: '
                size_hint:1,None
                height:'60dp'
                font_size:'12dp'
            

